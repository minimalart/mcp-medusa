{
  "name": "mcp-medusa",
  "version": "1.0.5",
  "description": "MCP server for MedusaJS e-commerce backend operations. Supports local STDIO and remote Streamable HTTP transport.",
  "main": "index.js",
  "bin": {
    "mcp-medusa": "./mcpServer.js"
  },
  "files": [
    "mcpServer.js",
    "server/",
    "tools/",
    "lib/",
    "env.example"
  ],
  "keywords": [
    "mcp",
    "medusa",
    "medusajs",
    "ecommerce",
    "claude",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minimalart/mcp-medusa.git"
  },
  "type": "module",
  "scripts": {
    "list-tools": "node index.js tools",
    "build": "tsc",
    "dev": "node mcpServer.js",
    "dev:http": "node server/index.js",
    "mcp:stdio": "node mcpServer.js",
    "mcp:http": "node server/index.js",
    "dev:vercel": "vercel dev",
    "start": "node mcpServer.js",
    "start:http": "node server/index.js",
    "start:do": "node server/index.js",
    "test:http": "node test-http-transport.js",
    "deploy": "vercel --prod",
    "type-check": "tsc --noEmit",
    "benchmark": "node benchmark/performance-test.js",
    "load-test": "node benchmark/load-test.js",
    "load-test:heavy": "node benchmark/load-test.js --concurrentUsers 20 --requestsPerUser 50 --delayMs 50",
    "performance": "npm run benchmark && npm run load-test"
  },
  "dependencies": {
    "@medusajs/medusa-js": "6.1.10",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "commander": "13.1.0",
    "cors": "^2.8.5",
    "dotenv": "16.4.7",
    "express": "^4.21.0"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.8.1",
  "author": "Postman, Inc.",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vercel/node": "^5.3.13",
    "typescript": "^5.9.2",
    "vercel": "^46.0.2"
  }
  ,
  "publishConfig": {
    "access": "public"
  }
}
